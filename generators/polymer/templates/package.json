{
  "name": "<%= s.dasherize(name) %>",
  "devDependencies": {
    "cpr": "^2.0.2",
    "eslint": "^3.12.0",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-html": "^1.7.0",
    "mkdirp": "^0.5.1",
    "polymer-cli": "^0.17.0",
    "rimraf": "^2.5.4"
  },
  "scripts": {
    "lint": "eslint . --ext js,html --ignore-path .gitignore",
    "test": "npm run lint && polymer test",
    "clean": "rimraf build target",
    "prebuild": "npm run clean",
    "build": "polymer build",
    "postbuild": "npm run nuxeo",
    "prenuxeo": "mkdirp target/classes/nuxeo.war/<%= route %>",
    "nuxeo": "cpr build/bundled/ target/classes/nuxeo.war/<%= route %> -o && cpr nuxeo/ target/classes/ -o",
    "serve": "polymer serve"
  }
}
